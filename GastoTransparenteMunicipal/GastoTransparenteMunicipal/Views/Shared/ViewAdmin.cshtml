<!DOCTYPE html>
<html lang="es-cl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <title>@ViewBag.Title - @ViewBag.logo</title>
    <link href="~/Content/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/css/font.css" rel="stylesheet" />
    <link href="~/Content/css/styleBootrap.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">

        @RenderBody()

        <footer class="row">
            <div class="col padding-Div azulB">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 align-self-center">
                            <ul>
                                <li class="blanco"><a href="@Url.Action(" Index","Home")" class="@ViewBag.Inicio">Inicio</a></li>
                                <li class="blanco"><a href="@Url.Action("index","Ingresos")" class="@ViewBag.Ingresos">Ingresos</a></li>
                                <li class="blanco"><a href="@Url.Action("index","Gastos")" class="@ViewBag.Gastos">Gastos</a></li>
                                <li class="blanco"><a href="@Url.Action("Dueldos","DatosDestacados")" class="@ViewBag.Sueldo">Remuneraciones</a></li>
                                <li class="blanco"><a href="@Url.Action("Proveedores","DatosDestacados")" class="@ViewBag.Proveedores">Proveedores</a></li>
                                <li class="blanco"><a href="@Url.Action(" Corporaciones","DatosDestacados")" class="@ViewBag.Corporaciones">Corporaciones</a></li>
                                <li class="blanco"><a href="@Url.Action("subsidios","DatosDestacados")" class="@ViewBag.Subsidios">Subsidios</a></li>
                                <li class="blanco"><a href="@Url.Action("About","Home")" class="@ViewBag.About">El Proyecto</a></li>
                            </ul>
                        </div>
                        <div class="col-md-8 align-self-center">
                            <div class="row">
                                <div class="col-12">
                                    <p>Una iniciativa conjunta de:</p>
                                </div>
                                <div class="col-md-9">
                                    <img src="~/Content/image/iniciativa.png" class="img-fluid" usemap="#iniciativa" />
                                    <map name="iniciativa">
                                        <area shape="rect" coords="1,1,240,56" alt=" Observatorio del Gasto Fiscal en Chile" href="rectangulo.html" />
                                        <area shape="rect" coords="260,1,390,56" alt="Consejo para la Transparencia" href="rectangulo.html" />
                                    </map>
                                </div>
                                @*<div class="col-md-3">
                                        <img src="~/Content/image/icono.png" class="img-fluid" alt="">
                                    </div>
                                    <div class="col-md-3">
                                        <img src="~/Content/image/icono.png" class="img-fluid" alt="">
                                    </div>
                                    <div class="col-md-3">
                                        <img src="~/Content/image/icono.png" class="img-fluid" alt="">
                                    </div>*@
                                <div class="col-md-3">
                                    <a href="">
                                        <img class="text-center img-fluid" src="~/Content/image/@(ViewBag.logo + ".png")" alt="Municipalidad">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1 align-self-center">
                            <a href="#">
                                <span class="md-36 blanco icon-twitter"></span>
                            </a>
                            <a href="#">
                                <span class="md-36 blanco icon-facebook"></span>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p class="text-center"><small> Desarrollado por Observatorio del Gasto Fiscal en chile</small> </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#menu-mobile").click(
                function () {
                    if ($("#menu-mobile-contenido").hasClass("hidden")) {
                        $("#menu-mobile-contenido").removeClass("hidden");
                    }
                    else {
                        $("#menu-mobile-contenido").addClass("hidden");
                    }
                }
            );
        });

    </script>
</body>
</html>
