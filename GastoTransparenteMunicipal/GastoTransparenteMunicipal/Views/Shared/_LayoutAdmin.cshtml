<!DOCTYPE html>
<html lang="es-cl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <title>@ViewBag.Title - @ViewBag.logo</title>
    @*@Styles.Render("~/Content/css")*@
    <link href="~/Content/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/css/font.css" rel="stylesheet" />
    <link href="~/Content/css/styleBootrap.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/styleSueldos.css" rel="stylesheet" />
    <link href="~/Content/css/tinyscrollbar.css" rel="stylesheet" />
    <link href="~/Content/css/styleTreemap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col barra-superior">
                <div class="row">
                    <div class="col">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-5 align-self-center">
                                    <div class="row">
                                        <div class="padding-cero col-10 col-sm-10 col-md-12 align-self-center">
                                            <div class="row">
                                                <span class="col-8 align-self-center">
                                                    <img class="img-fluid" src="~/Content/image/logo.svg" alt="" />
                                                </span>
                                                <span class="col-4 align-self-center">
                                                    <img class="img-fluid" src="~/Content/image/@(ViewBag.logo + ".png")" alt="LOGO MUNICIPALIDAD XXXXXX" />
                                                </span>

                                            </div>
                                        </div>
                                        <div class="col-2 col-sm-2 col-md-0 align-self-center ">
                                            <a id="menu-mobile">
                                                <span class="md-24 icon-menu"></span>
                                            </a>
                                        </div>
                                        <div class="col-12 hidden" id="menu-mobile-contenido">
                                            <hr>
                                            <nav>
                                                <a class="nav-link @ViewBag.Inicio" href="@Url.Action("CreateAccount","Admin")">Agregar usuario</a>
                                            </nav>
                                        </div>
                                    </div>


                                </div>
                                <div class="col-0 col-sm-0 col-md-7 padding-cero align-self-center">
                                    <nav class="">
                                        <ul class="nav nav-resp align-items-center">
                                            <li class="nav-item borde-menu">
                                                <a class="nav-link @ViewBag.Inicio" href="@Url.Action("CreateAccount","Admin")">Agregar usuario</a>
                                            </li>                                            
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()

        <footer class="row">
            <div class="col padding-Div azulB">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 align-self-center">
                            <ul>
                                @*<li class="blanco"><a href="@Url.Action("Index","Admin")" class="@ViewBag.Inicio">Inicio</a></li>*@                       
                            </ul>
                        </div>
                        <div class="col-md-8 align-self-center">
                            <div class="row">
                                <div class="col-12">
                                    <p>Una iniciativa conjunta de:</p>
                                </div>
                                <div class="col-md-9">
                                    <img src="~/Content/image/iniciativa.png" class="img-fluid" usemap="#iniciativa" />
                                    <map name="iniciativa">
                                        <area shape="rect" coords="1,1,240,56" alt=" Observatorio del Gasto Fiscal en Chile" href="rectangulo.html" />
                                        <area shape="rect" coords="260,1,390,56" alt="Consejo para la Transparencia" href="rectangulo.html" />
                                    </map>
                                </div>
                                @*<div class="col-md-3">
                                        <img src="~/Content/image/icono.png" class="img-fluid" alt="">
                                    </div>
                                    <div class="col-md-3">
                                        <img src="~/Content/image/icono.png" class="img-fluid" alt="">
                                    </div>
                                    <div class="col-md-3">
                                        <img src="~/Content/image/icono.png" class="img-fluid" alt="">
                                    </div>*@
                                <div class="col-md-3">
                                    <a href="">
                                        <img class="text-center img-fluid" src="~/Content/image/@(ViewBag.logo + ".png")" alt="Municipalidad">
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-1 align-self-center">
                            <a href="#">
                                <span class="md-36 blanco icon-twitter"></span>
                            </a>
                            <a href="#">
                                <span class="md-36 blanco icon-facebook"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#menu-mobile").click(
                function () {
                    if ($("#menu-mobile-contenido").hasClass("hidden")) {
                        $("#menu-mobile-contenido").removeClass("hidden");
                    }
                    else {
                        $("#menu-mobile-contenido").addClass("hidden");
                    }
                }
            );
        });

    </script>
</body>
</html>
